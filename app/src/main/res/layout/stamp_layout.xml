<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image_stamp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_profile"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/user_name_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/colorPrimaryDark"
                />

        </LinearLayout>



        <ImageView
            android:id="@+id/post_image_stamp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/stamp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/stamp_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/stamp_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="3sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/post_image_like_btn"
                android:layout_width="36dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_heart_outline"
                />

            <ImageView
                android:id="@+id/post_image_comment_btn"
                android:layout_width="35dp"
                android:layout_height="29dp"
                android:src="@drawable/ic_comment"
                android:layout_toEndOf="@+id/post_image_like_btn"
                android:layout_marginTop="3dp"
                android:layout_marginStart="6dp"
                />

            <ImageView
                android:id="@+id/post_save_comment_btn"
                android:layout_width="35dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_bookmark_outline"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="3dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5sp"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:text=""
            android:textColor="#AEAEAE"
            />



    </LinearLayout>

</androidx.cardview.widget.CardView>